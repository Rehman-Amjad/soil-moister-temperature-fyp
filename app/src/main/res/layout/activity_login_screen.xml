<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center|top"
    android:padding="20dp"
    android:background="@drawable/vector_background"
    tools:context=".LoginScreen">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/ic_profile"
            />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-black"
            android:textSize="24sp"
            android:padding="9dp"
            android:text="Login" />

        <EditText
            android:id="@+id/etUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/view_background"
            android:drawableStart="@drawable/ic_profile"
            android:drawableLeft="@drawable/ic_profile"
            android:ems="10"
            android:hint="Username"
            android:drawablePadding="10dp"
            android:inputType="textPersonName"
            android:padding="15dp"
            android:paddingStart="10dp"
            android:paddingLeft="20dp"
            android:textColor="@color/white"
            android:textColorHint="#B7FFFFFF"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/etUserPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:padding="15dp"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_custom_lock"
            android:textColorHint="#AEFFFFFF"
            android:textColor="@color/white"
            android:background="@drawable/view_background"
            android:inputType="textPassword"
            android:hint="Password" />



        <Button
            android:id="@+id/btnLogin"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#B13711"
            android:padding="15dp"
            android:text="LOGIN"
            android:textColor="@color/white"
            android:elevation="5dp"
            app:cornerRadius="10dp" />


        <Button
            android:id="@+id/btnExit"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:backgroundTint="#600801"
            android:padding="15dp"
            android:text="App Exit"
            android:textColor="@color/white"
            android:elevation="5dp"
            app:cornerRadius="10dp" />








    </LinearLayout>

</LinearLayout>